Name1=str(input("What is your name?"))
print("Hello",Name1)
user_action=input("Enter a choice (Rock,paper,scissors) lowercase only")
possible_action=("rock","paper","scissors")
import random 
computer_choice=random.choice(possible_action)
print(computer_choice)

if user_action==computer_choice:
  print("Both players selected",user_action,".It's a tie.")
  
elif user_action=="rock":
  if computer_choice=="scissors":
    print("Rock crushes scissors.",Name1,"wins.")
    
elif computer_choice=="rock":
    if user_action=="scissors":
          print("Rock crushes scissors.",Name1,"loses.")
          
elif user_action=="paper":
  if computer_choice=="rock":
    print("Paper covers rock.",Name1,"wins.")
    
elif computer_choice=="paper":
 if user_action=="rock":
    print("Paper covers rock.",Name1,"loses.")
    
elif user_action=="scissors":
  if computer_choice=="paper":
    print("Scissors cuts paper.",Name1,"wins.")
    
elif computer_choice=="scissors":
  if user_action=="paper":
    print("Scissors cuts paper.",Name1,"loses.")
    

      


    

















































